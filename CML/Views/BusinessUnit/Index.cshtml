<div class="content-wrapper">
    @(Html.Kendo().Grid<CML.Models.BusinessUnitModel>()
              .Name("grid")
              .Columns(columns =>
              {
                  columns.Bound(c => c.BusinessUnit);
                  columns.Command(command => { command.Edit(); command.Destroy(); }).Width(180);
              })
              .ToolBar(toolbar =>
              {
                  toolbar.Create();
                  toolbar.Excel();
              })
              .Editable(editable => editable.Mode(GridEditMode.PopUp))
               .Pageable(pageable => pageable
                            .Refresh(true)
                            .PageSizes(true)
                            .ButtonCount(5))
              .HtmlAttributes(new { style = "height: 450px;" })
              .Scrollable()
              .DataSource(dataSource => dataSource
                  .Ajax()
                  .Model(model => model.Id(p => p.ID))
                  .Read(read => read.Action("CML_BusinessUnit_Read", "BusinessUnit"))
                  .Create(create => create.Action("CML_BusinessUnit_Create", "BusinessUnit"))
                  .Update(update => update.Action("CML_BusinessUnit_Update", "BusinessUnit"))
                  .Destroy(destroy => destroy.Action("CML_BusinessUnit_Destroy", "BusinessUnit"))
              )
    )
</div>